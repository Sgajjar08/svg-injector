{
  "extends": [
    "config:js-lib",
    ":rebaseStalePrs",
    ":automergeAll",
    ":label(internal)",
    ":masterIssue"
  ],
  "ignorePaths": ["**/node_modules/**"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "depTypeList": ["dependencies"],
      "rangeStrategy": "bump"
    },
    {
      "matchPackageNames": ["sinon"],
      "allowedVersions": "< 10.0.0"
    }
  ],
  "prCreation": "not-pending",
  "stabilityDays": 3
}
