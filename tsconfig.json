{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "lib",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "test/**/*", "types/**/*"]
}
